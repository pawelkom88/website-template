---
import { Image } from "astro:assets";
import "./footer.css";
import {
  footerLinks1,
  footerLinks2,
  footerLinks3,
  navigationLinks,
  socialMediaLinks,
  currentDate,
} from "./footer.ts";
import Logo from "../logo/Logo.astro";
---

<section id="cs-footer-710">
  <div class="cs-container">
    <div class="cs-top">
      <div class="cs-logo-wrapper">
        <Logo />
      </div>
      <ul class="cs-ul">
        <li class="cs-li">
          <span class="cs-header">Quick Links</span>
        </li>
        {
          footerLinks1.map(({ href, name }) => {
            return (
              <li class="cs-li">
                <a href={href} class="cs-link">
                  {name}
                </a>
              </li>
            );
          })
        }
      </ul>
      <ul class="cs-ul">
        <li class="cs-li">
          <span class="cs-header">Quick Links</span>
        </li>
        {
          footerLinks2.map(({ href, name }) => {
            return (
              <li class="cs-li">
                <a href={href} class="cs-link">
                  {name}
                </a>
              </li>
            );
          })
        }
      </ul>
      <ul class="cs-ul cs-contact-ul">
        {
          footerLinks3.map(({ href, imageSrc, details }) => {
            return (
              <>
                <li class="cs-li">
                  <a href={href} class="cs-link">
                    <Image
                      class="cs-icon"
                      src={imageSrc}
                      alt="icon"
                      width="24"
                      height="24"
                      aria-hidden="true"
                    />
                    {details}
                  </a>
                </li>
              </>
            );
          })
        }
      </ul>
    </div>
    <!--Middle Section-->
    <div class="cs-middle">
      <!--Navigation-->
      <ul class="cs-nav">
        {
          navigationLinks.map(({ text, href }) => (
            <li class="cs-nav-li">
              <a href={href} class="cs-nav-link">
                {text}
              </a>
            </li>
          ))
        }
      </ul>
      <!--Social-->
      <ul class="cs-social">
        {
          socialMediaLinks.map(({ href, defaultIconSrc, hoverIconSrc, altText }) => (
            <li class="cs-social-li">
              <a
                href={href}
                class="cs-social-link"
                aria-label={altText}
                target="_blank"
                rel="noopener">
                <Image
                  class="cs-social-icon cs-default"
                  src={defaultIconSrc}
                  alt="icon"
                  width="24"
                  height="24"
                  aria-hidden="true"
                />
                <Image
                  class="cs-social-icon cs-hover"
                  src={hoverIconSrc}
                  alt="icon"
                  width="24"
                  height="24"
                  aria-hidden="true"
                />
              </a>
            </li>
          ))
        }
      </ul>
    </div>
    <!--Bottom Section-->
    <div class="cs-bottom">
      <span class="cs-copyright">
        Â© Copyright {currentDate} - <a
          href=""
          class="cs-copyright-link"
          target="_blank"
          rel="noopener">Company name</a
        >
      </span>
    </div>
  </div>
