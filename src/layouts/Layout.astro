---
import Navigation from "../components/navigation/Navigation.astro";
import Footer from "../components/footer/Footer.astro";
import "@fontsource/roboto/400.css";
import "@fontsource/roboto/500.css";
import "@fontsource/roboto/700.css";
import MainHead from "../seo/main-head/MainHead.astro";

const { title = "Template", description = "Template", image, frontmatter, robots } = Astro.props;
---

<!doctype html>
<html lang="en">
  <MainHead {title} {description} {image} {frontmatter} {robots} />
  <body>
    <Navigation />
    <slot />
    <Footer />
    <style is:global>
      :root {
        --text: #181c12;
        --background: #fdfdfc;
        --background2: #f7f7f7;
        --primary: #0a6c78;
        --secondary: #87c9ce;
        --dark: #000;
        --white: #fff;
        --accent: #934461;
        --topperFontSize: clamp(0.8125rem, 1.6vw, 1rem);
        --headerFontSize: clamp(1.9375rem, 3.9vw, 3.0625rem);
        --bodyFontSize: 1rem;
        --sectionPadding: clamp(3.75rem, 7.82vw, 6.25rem) 1rem;
      }
      html {
        font-family: "Roboto", sans-serif;
        background-color: var(--background);
        color: var(--text);
      }
      body {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      .cs-topper {
        font-size: var(--topperFontSize);
        font-weight: 700;
        color: var(--primary);
      }
    </style>
  </body><!-- RESET CSS ! --><!-- FONT - can be fontsource --><!-- CHANGE img to IMAGE --><!-- allow contentful images in config file -->
</html>
