      const backgroundImage = document.getElementById("hero-227");
      if (backgroundImage) {
        backgroundImage.style.backgroundImage = `url(${desktopImageUrl})`;
      }

      const pictureElement = document.querySelector(".cs-picture");
      if (pictureElement) {
        pictureElement.innerHTML = `
        <source
          media="(max-width: 600px)"
          srcset="${mobileImageUrl}"
        />
        <source
          media="(min-width: 601px)"
          srcset="${desktopImageUrl}"
        />
        <Image
          src="${desktopImageUrl}"
          alt="${alt}"
          width="2250"
          height="1500"
          aria-hidden="true"
        />`;
